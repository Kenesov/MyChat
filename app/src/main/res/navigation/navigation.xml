<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/groupsFragment">

    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.example.mychat.ui.GroupsFragment"
        android:label="GroupsFragment"
        tools:layout="@layout/all_groups">
        <action
            android:id="@+id/action_groupsFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.mychat.ui.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/all_chat"
        />
</navigation>